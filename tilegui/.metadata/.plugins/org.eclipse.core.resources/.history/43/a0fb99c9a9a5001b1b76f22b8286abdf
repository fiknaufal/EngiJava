package data;

import org.lwjgl.LWJGLException;
import org.lwjgl.opengl.Display;
import org.lwjgl.opengl.DisplayMode;
import org.newdawn.slick.opengl.Texture;

import static org.lwjgl.opengl.GL11.*;
import static helpers.Artist.*;

public class Boot {
	
	public Boot() {
		BeginSession();

		Texture t;
		while (!Display.isCloseRequested()) {
			for (int i = 0; i < 15; i++) {
				for (int j = 0; j < 20; j++) {
					if (i < 8 && j < 10) {
						t = LoadTexture("res/Grass.png", "PNG");
						DrawQuadTex(t, j*64+1, i*64+1, 62, 62);
					} else if ((i < 8 && j >= 10)) {
						t = LoadTexture("res/Ice.png", "PNG");
						DrawQuadTex(t, j*64+1, i*64+1, 62, 62);
					} else if ((i >= 8 && j >= 10)) {
						t = LoadTexture("res/Water.png", "PNG");
						DrawQuadTex(t, j*64+1, i*64+1, 62, 62);
					} else {
						t = LoadTexture("res/Lava.png", "PNG");
						DrawQuadTex(t, j*64+1, i*64+1, 62, 62);
					}
				}
			}
			Display.update();
			Display.sync(60);
		}
		Display.destroy();
	}
	
	public static void main (String[] args) {
		new Boot();
	}
}